<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.tictactoegame.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe Game"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:textIsSelectable="false"
        android:textSize="19dp"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b1"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="234dp"
        android:layout_marginTop="107dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b2"
        android:layout_below="@+id/b1"
        android:layout_alignEnd="@+id/b1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b3"
        android:layout_alignEnd="@+id/b2"
        android:layout_below="@+id/b2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b4"
        android:layout_alignTop="@+id/b1"
        android:layout_toEndOf="@+id/b2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b5"
        android:layout_below="@+id/b1"
        android:layout_toEndOf="@+id/b2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b6"
        android:layout_below="@+id/b2"
        android:layout_toEndOf="@+id/b3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b7"
        android:layout_alignTop="@+id/b4"
        android:layout_toEndOf="@+id/b4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b8"
        android:layout_below="@+id/b7"
        android:layout_toEndOf="@+id/b5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b9"
        android:layout_below="@+id/b8"
        android:layout_toEndOf="@+id/b5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:id="@+id/b10"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/b3"
        android:enabled="true"
        android:background="@color/material_deep_teal_200"
        android:textSize="15dp"
        android:textAlignment="center"
        android:nestedScrollingEnabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="score "
        android:id="@+id/b11"
        android:layout_alignTop="@+id/b10"
        android:layout_alignStart="@+id/b6"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="highest score "
        android:id="@+id/b12"
        android:layout_alignTop="@+id/b11"
        android:layout_toEndOf="@+id/b11"
        android:textAlignment="center"
        android:textColor="@color/abc_search_url_text"
        android:textSize="15dp" />
</RelativeLayout>
